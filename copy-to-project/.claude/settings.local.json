{
  "$schema": "https://code.claude.com/schemas/settings.json",
  "permissions": {
    "wildcards": [
      "Bash(ruff*)",
      "Bash(pytest*)",
      "Bash(python -m pytest*)",
      "Bash(mypy*)",
      "Bash(make check*)",
      "Bash(make test*)"
    ]
  },
  "skillHotReload": true,
  "forkedContextEnabled": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/require_plan.py",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/shell_guard.py",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/mark_dirty.py",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "python .claude/hooks/auto_format.py",
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/enforce_verify.py",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "python .claude/hooks/enforce_subagent_tests.py",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
